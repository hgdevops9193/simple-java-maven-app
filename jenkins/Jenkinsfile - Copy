pipeline {
    agent any
    tools {
        maven 'jenkins-maven'
    }
    stages {
        stage('checkout') {
            steps {
                echo "cloning scm code"
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo "building code"
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Code Quality Check via SonarQube') {
            steps {
                script {
                withSonarQubeEnv("SonarQube") {
                sh "mvn sonar:sonar"
                    }
                }
            }
        }
        stage('Upload to Artifactory') {
            steps {
                rtMavenDeployer(
                    id: '',
                    serverId: '',
                    releaseRepo: '',
                    snapshotRepo: ''
                )
                rtMavenRun (
                    pom: '',
                    goals: '',
                    deployerId: '',
                )
                rtPublishBuildInfo (
                    serverId: '',
                )
            }
        }
        stage ('Docker Deployment') {
            steps {
                sh 'docker run --name <name> -d -p 7000:8080' dtr.nagarro.com:443/devopssampleapplication:${BUILD_NUMBER}
            }
        }
        stage ('heml charts deployment') {
            steps {
                sh '''
                    kubectl create ns gunika-java-${BUILD_NUMBER}
                    helm install devops-helm-java mychart-java --set image=dtr.nagarro.com:443/devopssampleapplication:${BUILD_NUMBER} --set nodePort=301${BUILD_NUMBER}
                '''
            }
        }
        post {
            always {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }
}
